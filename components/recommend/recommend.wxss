/**recommend.wxss**/
.recommend-wrapper{
	height: 100%;
}
.recommend-wrapper .loading-wrapper{
	margin-top: 60px;
}
.banner{
	padding-top: 40%;
	position: relative;
}
.banner-height{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}
.banner swiper{
	height: 100%;
}
.slide-image{
	width: 100%;
}
.wx-swiper-dots-horizontal{
	 margin-bottom: 0rpx;
}
.recommend-list{
	padding: 0 20rpx;
}

.list-title{
	display: block;
	color: #fff;
	font-size: 16px;
	line-height: 54px;
	text-align: center;
}
.list-wrapper{
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
}
.list-item{
	width: calc(50% - 10rpx);
	background-color: #2e4650;
	padding-bottom: 10rpx;
	margin-bottom: 20rpx;
}
.img-box{
	position: relative;
}
.rec-img{
	display: block;
	width: 100%;
}
.listen-count{
	font-size: 12px;
	color: #fff;
	position: absolute;
	left:  6px;
	bottom: 9px;
}
.img-box .icon-listen{
	font-size: 12px;
	margin-right: 4px;
}
.img-box .icon-play{
	color: #fff;
	background-color: rgba(0,0,0,.4);
	font-size: 24px;
	border-radius: 50%;
	position: absolute;
	right: 6px;
	bottom: 6px;
}
.rec-name{
	display: block;
	color: #fff;
	font-size: 14px;
	line-height: 28px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	padding: 0 10rpx;
}
.rec-author{
	display: block;
	color: #fff;
	font-size: 12px;
	opacity: 0.4;
	padding: 0 10rpx;
}
.songSheet-hover{
	background-color: rgba(255, 255, 255, 0.1);
	opacity: 0.8;
}
.about-us{
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	padding: 30px 0;
}
.logo{
	display: block;
	width: 100px;
}
.click-tips{
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 10px;
}
.click-tips image{
	width: 20px;
}
.click-tips text{
	color: #fff;
	font-size: 12px;
}