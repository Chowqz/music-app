/**recommend.wxss**/

.toplist-wrapper {
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx 20rpx 0;
}
.toplist-wrapper .loading-wrapper{
    margin-top: 60px;
}
.toplist-item {
    display: flex;
    width: 100%;
    background: linear-gradient(to right, #1d2b38 , #394754);
    margin-bottom: 20rpx;
}

.toplist-img {
    display: block;
    width: 100px;
	height: 100px;
}

.toplist-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: rgba(255, 255, 255, 0.8);
    box-sizing: border-box;
    padding: 0 20rpx;
    overflow: hidden;
}

.toplist-songlist-item {
    display: block;
    font-size: 14px;
    line-height: 28px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}